{
  "$id": "https://amxp.org/schemas/event-cpa-conversion.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event CPA Conversion",
  "type": "object",
  "required": ["event_type","serve_token","conversion_id","ts","auth"],
  "properties": {
    "event_type": { "type": "string", "const": "cpa_conversion" },
    "serve_token": { "type": "string" },
    "conversion_id": { "type": "string" },
    "conversion_type": { "type": "string" },
    "order_value_cents": { "type": "integer", "minimum": 0 },
    "currency": { "$ref": "common.json#/properties/currency" },
    "ts": { "$ref": "common.json#/properties/timestamp" },
    "auth": {
      "type": "object",
      "required": ["nonce","sig"],
      "properties": {
        "nonce": { "$ref": "common.json#/properties/nonce" },
        "sig": { "$ref": "common.json#/properties/signature" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
