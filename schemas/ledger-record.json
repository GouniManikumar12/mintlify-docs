{
  "$id": "https://amxp.org/schemas/ledger-record.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LedgerRecord",
  "type": "object",
  "required": ["serve_token","state","amounts","timeline","agent_id","platform_id","wallets"],
  "properties": {
    "serve_token": { "type": "string" },
    "state": { "type": "string", "enum": ["EXPOSURE_PENDING","CLICK_PENDING","CONVERSION_PENDING","FINALIZED"] },
    "amounts": {
      "type": "object",
      "properties": {
        "cpx": { "$ref": "common.json#/properties/money" },
        "cpc": { "$ref": "common.json#/properties/money" },
        "cpa": { "$ref": "common.json#/properties/money" }
      },
      "additionalProperties": false
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["t","op","unit","amt"],
        "properties": {
          "t": { "$ref": "common.json#/properties/timestamp" },
          "op": { "type": "string", "enum": ["reserve","release","capture"] },
          "unit": { "type": "string", "enum": ["CPX","CPC","CPA"] },
          "amt": { "$ref": "common.json#/properties/money" }
        },
        "additionalProperties": false
      }
    },
    "expiry": {
      "type": "object",
      "properties": {
        "exposure_sec": { "type": "integer", "minimum": 0 },
        "click_sec": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "agent_id": { "type": "string" },
    "platform_id": { "type": "string" },
    "wallets": {
      "type": "object",
      "properties": {
        "adv": { "type": "string" },
        "platform": { "type": "string" },
        "network": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
