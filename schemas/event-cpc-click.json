{
  "$id": "https://amxp.org/schemas/event-cpc-click.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event CPC Click",
  "type": "object",
  "required": ["event_type","serve_token","event_id","ts","auth"],
  "properties": {
    "event_type": { "type": "string", "const": "cpc_click" },
    "serve_token": { "type": "string" },
    "event_id": { "type": "string" },
    "s2s": { "type": "boolean" },
    "ts": { "$ref": "common.json#/properties/timestamp" },
    "auth": {
      "type": "object",
      "required": ["nonce","sig"],
      "properties": {
        "nonce": { "$ref": "common.json#/properties/nonce" },
        "sig": { "$ref": "common.json#/properties/signature" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
