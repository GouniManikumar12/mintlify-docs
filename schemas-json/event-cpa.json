{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aip.org/schemas/event-cpa.json",
  "title": "CPA Conversion Event",
  "description": "Event fired when a user completes a conversion (signup, purchase, trial start, etc.).",
  "type": "object",
  "required": [
    "event_type",
    "serve_token",
    "conversion_id",
    "conversion_type",
    "wallet_id",
    "brand_agent_id",
    "pricing",
    "timestamp"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "cpa_conversion",
      "description": "Event type (always cpa_conversion)"
    },
    "serve_token": {
      "type": "string",
      "description": "Token linking exposure → click → conversion",
      "example": "stk_abcxyz123"
    },
    "conversion_id": {
      "type": "string",
      "description": "Unique identifier for this conversion",
      "example": "cnv_001"
    },
    "conversion_type": {
      "type": "string",
      "enum": [
        "signup",
        "purchase",
        "trial_start",
        "demo_request",
        "download",
        "custom"
      ],
      "description": "Type of conversion action",
      "example": "purchase"
    },
    "wallet_id": {
      "type": "string",
      "description": "Wallet to apply final CPA charge",
      "example": "wal_ba451"
    },
    "brand_agent_id": {
      "type": "string",
      "description": "Brand agent associated with the conversion",
      "example": "ba_451"
    },
    "pricing": {
      "type": "object",
      "description": "CPA pricing. This is the FINAL amount, replacing CPX/CPC.",
      "required": ["unit", "amount_cents"],
      "properties": {
        "unit": {
          "type": "string",
          "const": "CPA",
          "description": "Billing unit"
        },
        "amount_cents": {
          "type": "integer",
          "minimum": 0,
          "description": "Final CPA charge in cents",
          "example": 4900
        }
      }
    },
    "order_value_cents": {
      "type": "integer",
      "minimum": 0,
      "description": "Optional order value for purchase conversions",
      "example": 25000
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "Order currency",
      "example": "USD"
    },
    "conversion_metadata": {
      "type": "object",
      "description": "Optional advertiser-side contextual data",
      "properties": {
        "user_id": { "type": "string" },
        "order_id": { "type": "string" },
        "product_ids": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the conversion occurred",
      "example": "2025-11-14T18:30:00Z"
    },
    "ext": {
      "$ref": "./common.json#/definitions/extensionNamespace"
    }
  }
}
