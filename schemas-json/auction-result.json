{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AuctionResult",
  "description": "Winning bid and reservation details returned to the AI platform.",
  "type": "object",
  "required": [
    "auction_id",
    "serve_token",
    "ttl_ms"
  ],
  "properties": {
    "auction_id": {
      "type": "string",
      "example": "auc_981"
    },
    "no_bid": {
      "type": "boolean",
      "default": false,
      "description": "Whether this auction ended with no bids"
    },
    "serve_token": {
      "type": "string",
      "example": "stk_abcxyz123"
    },
    "winner": {
      "type": "object",
      "description": "Winning bid info",
      "properties": {
        "brand_agent_id": {
          "type": "string",
          "example": "ba_451"
        },
        "preferred_unit": {
          "type": "string",
          "enum": ["CPX", "CPC", "CPA"],
          "example": "CPA"
        },
        "reserved_amount_cents": {
          "type": "integer",
          "minimum": 0,
          "description": "Amount held at auction time",
          "example": 500
        }
      }
    },
    "render": {
      "type": "object",
      "description": "Creative payload",
      "properties": {
        "label": { "type": "string", "example": "[Ad]" },
        "title": { "type": "string", "example": "Scale your CRM" },
        "body": { "type": "string", "example": "Built for founders." },
        "cta": { "type": "string", "example": "Try for free" },
        "url": {
          "type": "string",
          "format": "uri",
          "example": "https://admesh.click/stk_abcxyz123"
        }
      }
    },
    "ttl_ms": {
      "type": "integer",
      "minimum": 1000,
      "maximum": 300000,
      "example": 60000
    },
    "ext": {
      "$ref": "./common.json#/definitions/extensionNamespace"
    }
  },
  "oneOf": [
    { "required": ["winner", "render"] },
    {
      "required": ["no_bid"],
      "properties": {
        "no_bid": { "const": true }
      }
    }
  ],
  "$id": "https://aip.org/schemas/auction-result.json"
}
